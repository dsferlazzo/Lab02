<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.FXMLController">
   <top>
      <Label text="Lab 02 - Alien Translator" BorderPane.alignment="CENTER">
         <font>
            <Font name="Courier New Bold" size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label text="Alien Text" />
                  <TextField fx:id="txtParola" onAction="#handleTranslate" promptText="Insert Text..." />
                  <Button mnemonicParsing="false" onAction="#handleTranslate" text="Translate" />
               </children>
            </HBox>
            <TextArea fx:id="txtTraduzioni" disable="true" prefHeight="182.0" prefWidth="278.0" promptText="Welcome to Alien Dictionary" />
            <Button mnemonicParsing="false" onAction="#handleClearText" text="Clear Text" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
